---
import ProjectCard from "./ProjectCard.astro";
---

<div class="bg-white rounded-lg w-full">
  <div class="flex flex-col gap-12">
    <div>
      <h3 class="text-3xl font-semibold text-slate-900">My work</h3>
      <h2 class="text-lg font-semibold text-slate-500">
        Some of my selected work
      </h2>
    </div>
    <div class="text-slate-700 flex flex-col gap-4">
      <ProjectCard
        title="ChainWatcher"
        description="A decentralized web application used to track wallets on Ethereum VM based blockchains like Binance Smart Chain, Arbitrum, and Ethereum itself"
        link="/chainwatcher"
        image="/img/chainwatcher/chainwatcher_preview.png"
      />
    </div>
  </div>
</div>
