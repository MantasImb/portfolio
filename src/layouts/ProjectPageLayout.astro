---
import TechBadge from '../components/TechBadge.astro';

interface Props {
	title: string;
	imageLink: string;
	techStack: string[];
}

const { title, imageLink, techStack } = Astro.props;
---
<main class="flex flex-col items-center justify-center py-12 w-4/6 gap-12">
	<img class="shadow-md rounded-md w-4/6" src={imageLink}>
	<div class="flex flex-wrap items-center justify-center w-4/6 gap-2">
		{techStack.map(tech => <TechBadge name={tech} />)}
	</div>
	<h1 class="text-3xl font-semibold text-slate-900">{title}</h1>
	<div class="w-1/2 flex flex-col gap-4">
		<slot />
	<div>
</main>
